@model UtilisateursEditViewModel

@{
    ViewData["Title"] = "Modifier votre compte - Vue utilisateur";
}

<h1>@ViewData["Title"]</h1>

<h4>Utilisateur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Prenom" class="control-label"></label>
                <input asp-for="Prenom" class="form-control" />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Nom" class="control-label"></label>
                <input asp-for="Nom" class="form-control" />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Pseudonyme" class="control-label"></label>
                <input asp-for="Pseudonyme" class="form-control" />
                <span asp-validation-for="Pseudonyme" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Courriel" class="control-label"></label>
                <input asp-for="Courriel" class="form-control" />
                <span asp-validation-for="Courriel" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="InfoLettre" class="control-label"></label>
                <input asp-for="InfoLettre" class="form-check" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Modifier" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>

<div class="mb-5">
    <a asp-action="Index">Retournez à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
